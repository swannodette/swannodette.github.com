source "https://rubygems.org"

# Use the github-pages gem which includes Jekyll 3.9.x (closest to 3.10.0 supported by GitHub Pages)
gem "github-pages", group: :jekyll_plugins

# Hitchens theme
gem "hitchens-theme"

# Jekyll plugins that are supported by GitHub Pages
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
  gem "jekyll-paginate"
end